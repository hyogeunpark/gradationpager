<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.hyogeun.gradationpager.MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/example_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="View Pager"
        android:background="@drawable/drawable_rounded_button"
        android:onClick="onClick"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/example_viewpager_with_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="View Pager with Tab"
        android:background="@drawable/drawable_rounded_button"
        android:onClick="onClick"/>

</LinearLayout>
